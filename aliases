alias grhard="git reset --hard HEAD"
alias gitupstream="git remote add upstream"
alias gsui="git submodule update --init"
alias rebaseup="git fetch upstream && gcm && git rebase upstream/master"
alias gitfmup="git fetch upstream && git merge upstream/master"
alias delmerged="git branch --merged | grep -v \* | grep -v '^\s*master$' | xargs -t -n 1 git branch -d"
alias gu='gitup'

